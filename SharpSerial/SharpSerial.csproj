<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net40;netcoreapp3.1</TargetFrameworks>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <PackageId>SharpSerial</PackageId>
    <PackageVersion>1.0.1.0</PackageVersion>
    <PackageProjectUrl>https://github.com/samuelventura/SharpSerial</PackageProjectUrl>  
    <PackageTags>Serial Isolation</PackageTags>  
    <Authors>Samuel Ventura</Authors>
    <Description>C# Process Isolated Serial</Description>
    <License>https://www.apache.org/licenses/LICENSE-2.0</License>  
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">
    <PackageReference Include="System.IO.Ports" Version="4.4.0" />
  </ItemGroup>

</Project>
